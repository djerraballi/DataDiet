<html metal:use-macro="load: main.pt">
<div metal:fill-slot="head">
	<title>Data Diet</title>
</div>
<div metal:fill-slot="content">
	<div class="container">
		<div class="row">

			<div tal:repeat="post posts" class="span4">
				<h3>${post['title']}</h3>
				<hr />
				<p>${post['body']}</p>
				<p><a href="">Like</a> <a href="">Dislike</a> <a class="btn btn-success btn-medium" href="${post['hyperlink']}">Go to Article</a> <a href="">${post['total_comments']} comments</a></p>
				<p>${post['points']} points; ${post['since_added']} by <a href="">${post['username']}</a></p>
				<!--${post['hyperlink']}-->
				<!--${post['comment_link']}-->
			</div>
			
		</div>
	</div>
</div>

</html>