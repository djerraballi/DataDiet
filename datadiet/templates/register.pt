<html metal:use-macro="load: main.pt">
<div metal:fill-slot="head">
	<title>Register: Data Diet</title>
</div>

<div metal:fill-slot="content">
	<div class="container">
		<form method="POST" action="/datadiet/test_create_user" class="form-horizontal">
			<fieldset>
				<legend>Register</legend>

				<div class="control-group">
					<label class="control-label" for="username">Username</label>
					<div class="controls">
						<input type="text" class="input-medium" placeholder="username" id="username" name="username">
					</div>
				</div>

				<div class="control-group">
					<label class="control-label" for="password">Password</label>
					<div class="controls">
						<input type="password" class="input-medium" placeholder="password" id="password" name="password">
					</div>
				</div>

				<div class="control-group">
					<label class="control-label" for="r-password">Password</label>
					<div class="controls">
						<input type="password" class="input-medium" placeholder="repeat password"  id="r-password" name ="r-password">
					</div>
				</div>

				<div class="control-group">
					<label class="control-label" for="email">Email Address</label>
					<div class="controls">
						<input type="text" class="input-medium" placeholder="email" id="email" name="email">
					</div>
				</div>

				<div class="form-actions">
					<button type="submit" class="btn">Register</button>
				</div>
			</fieldset>
		</form>
	</div>
</div>

</html>