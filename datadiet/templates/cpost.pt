<html metal:use-macro="load: main.pt">
<div metal:fill-slot="head">
	<title>Create Post: Data Diet</title>
</div>

<div metal:fill-slot="content">
	<form method="POST" action="/datadiet/test_add_post" class="form-horizontal">
		<fieldset>
			<legend>Create Post</legend>

			<div class="control-group">
				<label class="control-label" for="username">Title</label>
				<div class="controls">
					<input type="text" class="input-medium" placeholder="Title" id="title" name="title">
				</div>
			</div>

			<div class="control-group">
				<label class="control-label" for="body">Body</label>
				<div class="controls">
					<textarea class="input-xlarge" rows="3" placeholder="Write Stuff Here" id="body" name="body"></textarea>
				</div>
			</div>

			<div class="control-group">
				<label class="control-label" for="hyperlink">Hyperlink</label>
				<div class="controls">
					<input type="text" class="input-large" placeholder="Link to news source here" name ="hyperlink" id="hyperlink">
				</div>
			</div>

			<div class="control=group">
				<label class="control-label" for="DietTag">Diet Tag Select</label>
				<div class="controls">
					<select name ="DietTag" id="DietTag">
						<option value="carb">Carbohydrate</option>
						<option value="protein">Protein</option>
						<option value="veggie">Vegetable</option>
						<option value="dessert">Dessert</option>
					</select>
				</div>
			</div>

			<div class="form-actions">
				<button type="submit" class="btn">Add Post</button>
			</div>

		</fieldset>
	</form>
</div>

</html>